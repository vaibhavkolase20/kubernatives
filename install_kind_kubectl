
# How to install kind and kubectl
===================================


#!/bin/bash

echo "ЁЯФ╡ System Update рд╕реБрд░реВ..."
sudo apt update -y
sudo apt upgrade -y

echo "ЁЯФ╡ Docker Install рдХрд░рдд рдЖрд╣реЗ..."
sudo apt install docker.io -y
sudo systemctl enable docker
sudo systemctl start docker
sudo usermod -aG docker $USER

echo "ЁЯФ╡ kubectl рдбрд╛рдЙрдирд▓реЛрдб рдХрд░рдд рдЖрд╣реЗ..."
curl -LO "https://dl.k8s.io/release/$(curl -L -s https://dl.k8s.io/release/stable.txt)/bin/linux/amd64/kubectl"
chmod +x kubectl
sudo mv kubectl /usr/local/bin/

echo "ЁЯФ╡ KIND рдбрд╛рдЙрдирд▓реЛрдб рдХрд░рдд рдЖрд╣реЗ..."
curl -Lo ./kind https://kind.sigs.k8s.io/dl/latest/kind-linux-amd64
chmod +x kind
sudo mv kind /usr/local/bin/

echo "ЁЯФ╡ рд╕рд░реНрд╡ installation рдкреВрд░реНрдг!"

echo "тЮбя╕П kubectl version:"
kubectl version --client

echo "тЮбя╕П kind version:"
kind --version

echo "ЁЯФ╡ Kubernetes cluster рддрдпрд╛рд░ рдХрд░рдд рдЖрд╣реЗ..."
kind create cluster

echo "тЮбя╕П Cluster Nodes:"
kubectl get nodes

echo "ЁЯОЙ Installation + Cluster Ready!"
echo "тЪая╕П Docker рд╕рд╛рдареА logout/login рдЖрд╡рд╢реНрдпрдХ рдЕрд╕реЗрд▓ (рдЬрд░ sudo рд╢рд┐рд╡рд╛рдп рдЪрд╛рд▓рдд рдирд╕реЗрд▓ рддрд░)."
